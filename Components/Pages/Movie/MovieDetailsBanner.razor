@using BlazorMovieDB.Models
@using BlazorMovieDB.Utils

<div class="relative h-[600px] w-full rounded-b-lg">
    <img src=@MovieBackDrop class="absolute h-full w-full object-cover blur-sm brightness-50" alt="..."  />

    <div class="absolute w-full h-full flex items-center gap-8">
        <div class="w-full md:w-1/3 flex justify-center md:justify-end items-center">
            <img src=@MoviePosterPath class="w-[250px] h-[400px] rounded-lg" />
        </div>
          
        <div class="w-2/3 hidden md:flex flex-col gap-4 text-white">
        <MovieDetailsInfo MovieDetails=MovieDetails />
        </div>
    </div>
</div>

<div class="md:hidden mt-4 flex flex-col gap-4 text-white pl-2">
    <MovieDetailsInfo MovieDetails=MovieDetails />
</div>

@code {
	[Parameter, EditorRequired]
	public required MovieDetails MovieDetails { get; set; }

    private string MovieBackDrop => Utils.GetImageUrl(MovieDetails.BackdropPath, Utils.ImageSizes.Original);
    private string MoviePosterPath => Utils.GetImageUrl(MovieDetails.PosterPath, Utils.ImageSizes.W500);
}
