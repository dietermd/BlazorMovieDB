@using BlazorMovieDB.Models

<div class="absolute inset-x-0 top-[70px] px-6 flex justify-center">
    <div class="md:basis-8/12 flex justify-center">
        <div class="flex flex-col md:w-5/6 lg:w-2/3 xl:w-3/5 max-h-[70vh] overflow-auto bg-white rounded-lg">
            @foreach (var movie in Movies)
            {
                <div class="group flex gap-2 h-[158px] p-1 cursor-pointer">
                    <SearchModalMovieCard Movie=@movie />
                </div>  
            }
        </div>          
    </div>        
</div>

@code {
	[Parameter, EditorRequired]
	public required List<Movie> Movies { get; set; }
}
